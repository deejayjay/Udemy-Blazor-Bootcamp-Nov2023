@page "/learnblazor/demoproduct"

<div class="row">
    <h2 class="text-primary">Demo Product</h2>
    @foreach(var prod in products)
    {
        <div class="col-6">
            <div class="border shadow-sm p-3 h-100 d-flex flex-column">
                <div class="flex-fill">
                    <h3>Product @prod.Id</h3>
                    <hr />
                    <p><strong>Name:</strong> @prod.Name</p>
                    <div>
                        <label for="props" class="form-label fw-bold">Show Properties:</label>
                        <input type="checkbox" name="props" class="form-check-inline" @bind-value="prod.IsActive" checked="@prod.IsActive" />
                    </div>

                    @if (prod.IsActive)
                    {
                        <ul>
                            @foreach (var prop in prod.ProductProperties)
                            {
                                <li><strong>@prop.Key: </strong>@prop.Value</li>
                            }
                        </ul>
                    }
                </div>

                <div class="d-flex justify-content-end gap-2">
                    <button class="btn btn-success">Edit</button>
                    <button class="btn btn-danger">Delete</button>
                </div>
            </div>
        </div>
    }
</div>

@code {
    List<Demo_Product> products = new();

    protected override void OnInitialized()
    {
        products.Add(new()
            {
                Id = 1,
                Name = "Midnight Blaze",
                IsActive = false,
                Price = 13.99,
                ProductProperties = new()
                {
                new Demo_ProductProp { Id = 1, Key = "Flavor", Value = "Rose"},
                     new Demo_ProductProp { Id = 2, Key = "Size", Value = "20oz"},
                    new Demo_ProductProp { Id = 3, Key = "Color", Value="Purple" }
                }
            });

        products.Add(new()
            {
                Id = 2,
                Name = "Blossom Lily",
                IsActive = true,
                Price = 11.99,
                ProductProperties = new()
                {
                    new Demo_ProductProp { Id = 1, Key = "Flavor", Value = "Lily" },
                    new Demo_ProductProp { Id = 2, Key = "Size", Value = "18oz" },
                    new Demo_ProductProp {Id = 3,Key = "Color",Value = "White"}
                }
            });
    }
}
